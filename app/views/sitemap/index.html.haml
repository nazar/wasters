.col_full.sitemap
  -box do
    %h2= "#{AppConfig.community_name} Sitemap"
    
    .yui-g
      .yui-g.first
        %h3 Categories
        %ul
          - @categories.each do |c|
            %li= link_to c.name, category_path(c)      
      .yui-g
        %h3= :pages.l
        %ul
          %li=link_to :home.l, '/'
          %li= link_to :users.l, users_path
          %li= link_to :items_database.l, items_path
          %li= link_to :quests_database.l, quests_path
          %li= link_to :mobs_database.l, mobs_path
          - Page.find(:all).each do |page|
            - if (logged_in? || page.page_public)
              %li= link_to page.title, pages_path(page)
          %li=link_to :log_in.l, '/login'
          

