- @section = 'items'
-box do
  %h3=:adding_item.l

  = error_messages_for :item

  - form_for(:item, :url => items_path, :html => {:class => "MainForm", :multipart => true}) do |f|
    = render :partial => 'form', :locals => {:form => f}
    %p= submit_tag :create.l

  = link_to :back.l, items_path

=render :partial => 'items/behaviour'