-qty_desc ||= 'Quantity'
%table{:id => table_id ||= 'mob_items', :class => 'mob_items'}
  %tr.head
    %th.sortfirstasc Item
    %th=qty_desc
    %th="Freqeuncy" if mob_items.first.respond_to?('frequency')
  -for item in mob_items
    %tr
      %td=link_to item.title, item_path(item)
      %td=item.quantity
      %td=MobItem.frequency_types[item.frequency.to_i] if item.respond_to?('frequency')
=javascript_tag("SortableTable.init('#{table_id}');")        