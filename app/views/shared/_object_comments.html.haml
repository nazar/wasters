-box :class => 'hfeed comments', :id => 'comments' do
  %h3=:item_comments.l
  %h2=:add_your_comment.l
  %p= render :partial => 'comments/comment_form', :locals => {:commentable => commentable}
  %a#newest_comment
  = render :partial => 'comments/comment', :collection => commentable.comments
  %span#more_comments_links= more_comments_links(commentable)